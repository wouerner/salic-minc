<script>
    
    $(document).ready(function(){
        
        $('#btnAddAssinante').click(function(){
            
            $("#dialog").html('Deseja adicionar a assinatura?');
        
            $("#dialog").dialog("destroy");
            $("#dialog").dialog({
                width: '400px',
                modal: true,
                draggable: false,
                resizable: false,
                closeOnEscape: false,
                title: 'Confirmação',
                buttons: { 
                    Cancelar:function() {
                        $(this).dialog('close');
                    },
                    Confirmar:function() {
                        $('#formConfigurarPagamento').attr('action','add-assinantes');
                        $('#formConfigurarPagamento').submit();
                    }
                }
            });

            $('.ui-dialog-titlebar-close').remove();

            
            
        });
        
    });

    function removeAssinante(valor){
        
        $("#dialog").html('Deseja remover a assinatura?');
        
        $("#dialog").dialog("destroy");
        $("#dialog").dialog({
            width: '400px',
            modal: true,
            draggable: false,
            resizable: false,
            closeOnEscape: false,
            title: 'Confirmação',
            buttons: { 
                Cancelar:function() {
                    $(this).dialog('close');
                },
                Confirmar:function() {
                    $('#assinanteCargoRemove').val(valor);
                    $('#formConfigurarPagamento').attr('action','remove-assinantes');
                    $('#formConfigurarPagamento').submit();
                }
            }
        });
        
        $('.ui-dialog-titlebar-close').remove();

        
    }
    

    function visualizarPagamentos(id){
        $('.pagamentos').hide();
        $('#t_'+id).show();
        
        $('#btnAbrir_'+id).hide();
        $('#btnFechar_'+id).show();
    }

    function esconderPagamentos(id){
        $('#t_'+id).hide();
        $('#btnAbrir_'+id).show();
        $('#btnFechar_'+id).hide();
    }

    function contarNumeracao(){
        var nrDespachoInicial   = parseInt($('#nrDespachoInicial').val());
        var nrDespachoGeral     = parseInt($('#nrDespachos').val());
        
        var conta = (nrDespachoGeral) + (nrDespachoInicial);
        $('#nrDespachoFinal').val(conta -1);
        $('#lbnrDespachoFinal').html(conta -1);
       
        if($('#nrDespachoInicial').val() === ''){
            $('#nrDespachoFinal').val('0');
            $('#lbnrDespachoFinal').html('0');
        }
    }

    function gerarDespachos(){
        
        var nrDespachos   = parseInt($('#nrDespachos').val());
        var nrDespachoInicial   = parseInt($('#nrDespachoInicial').val());
        
        if(nrDespachoInicial <= nrDespachos){
            $("#dialog").html('Número despacho inicial não pode ser menor ou igual ao Último despacho gerado!');
        
            $("#dialog").dialog("destroy");
            $("#dialog").dialog({
                width: '400px',
                modal: true,
                draggable: false,
                resizable: false,
                closeOnEscape: false,
                title: 'Alerta',
                buttons: { 
                    Fechar:function() {
                        $(this).dialog('close');
                    }
                }
            });

            $('.ui-dialog-titlebar-close').remove();
            return false;
        }
        
        $("#dialog").html('Deseja realmente gerar os despachos?');
        
        $("#dialog").dialog("destroy");
        $("#dialog").dialog({
            width: '400px',
            modal: true,
            draggable: false,
            resizable: false,
            closeOnEscape: false,
            title: 'Confirmação',
            buttons: { 
                Não:function() {
                    $(this).dialog('close');
                },
                Sim:function() {
                     $('#formConfigurarPagamento').submit();
                }
            }
        });

        $('.ui-dialog-titlebar-close').remove();
        
       
        
    }
    
</script>