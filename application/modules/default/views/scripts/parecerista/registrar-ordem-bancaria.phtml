    function efetivarPagamento(id){
        
        var retorno = true;
        $('#rpa_'+id).css('border','solid 1px #ccc');
        $('#nrOrdemBancaria_'+id).css('border','solid 1px #ccc');
        $('#dtOrdemBancaria_'+id).css('border','solid 1px #ccc');
        
        if($('#rpa_'+id).is(":empty")){
            $('#rpa_'+id).css('border','solid 1px red');
            $('#label_'+id).html('É preciso fazer o Upload do RPA! &nbsp; &nbsp; &nbsp;');
//            retorno = false;
        }
        
        if($('#nrOrdemBancaria_'+id).val() == ''){
            $('#nrOrdemBancaria_'+id).css('border','solid 1px red');
            retorno = false;
        }

        if($('#dtOrdemBancaria_'+id).val() == ''){
            $('#dtOrdemBancaria_'+id).css('border','solid 1px red');
            retorno = false;
        }

        if(retorno){
            
            $("#dialog").html('Deseja registrar a ordem bancária?');
        
            $("#dialog").dialog("destroy");
            $("#dialog").dialog({
                width: '400px',
                modal: true,
                draggable: false,
                resizable: false,
                closeOnEscape: false,
                title: 'Confirmação',
                buttons: { 
                    Não:function() {
                        $(this).dialog('close');
                    },
                    Sim:function() {
                        $('#form_'+id).submit();
                        $("#dialog").dialog("destroy");
                    }
                }
            });

            $('.ui-dialog-titlebar-close').remove();

        }
        
        
        
    }
    
    
    function visualizarPagamentos(id){
        $('tr.pagamento').addClass('sumir');
        $('#tr_'+id).toggleClass('sumir');

        $('#btnAbrir_'+id).hide();
        $('#btnFechar_'+id).show();
    }

    function esconderPagamentos(id){
        $('#tr_'+id).toggleClass('sumir');
        $('#btnAbrir_'+id).show();
        $('#btnFechar_'+id).hide();
    }
    
    function cancalarRegistroOrdem(id){
        $("#dialog").html('Deseja cancelar o registro de ordem bancária?');
        $("#dialog").dialog("destroy");
        $("#dialog").dialog({
            width: '400px',
            modal: true,
            draggable: false,
            resizable: false,
            closeOnEscape: false,
            title: 'Confirmação',
            buttons: { 
                Não:function() {
                    $(this).dialog('close');
                },
                Sim:function() {
                    $('#form_'+id).attr('action','cancelar-registro-ordem-bancaria');
                    $('#form_'+id).submit();
                    $("#dialog").dialog("destroy");
                }
            }
        });
        $('.ui-dialog-titlebar-close').remove();
    }

</script>