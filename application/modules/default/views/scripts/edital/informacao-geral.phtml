        $('.marcatodasareas').click(function() {
            if ($(this).is(':checked')) {
                $('.mta').show();
                $('.area').attr('checked', true);
            } else {
                $('.mta').hide();
                $('.area').attr('checked', false);
            }
        });

        $('.marcatodos').click(function() {
            if ($(this).is(':checked')) {
                $('.marcar').attr('checked', true);
            } else {
                $('.marcar').attr('checked', false);
            }
        });

        $('.area').click(function() {
            if ($(this).is(':checked')) {
                $('.pai-' + $(this).val()).fadeIn();
                $('.filho-' + $(this).val()).addClass('marcar');
            } else {
                $('.pai-' + $(this).val()).fadeOut();
                $('.filho-' + $(this).val()).attr('checked', false);
                $('.filho-' + $(this).val()).removeClass('marcar');
                $('.marcatodasareas').attr('checked', false);
            }
        });

        $("#proximoSalvaInfo").click(function() {
            
            $('#msg').hide();
            $('#txtmsg').html('');
            
            var check       = 0;
            var TPE         = 0;
            var Area        = 0;
            var Segmento    = 0;
            var enviar      = 0;
                
            $('.required').each(function () {
                
                var obj = $(this).val();
                
                if(obj == '') {
                    check = 1;
                }

            });
            
            $('.check').each(function () {
                if(this.checked) {
                    TPE = 1;
                }
            });
            
            $('.area').each(function () {
                if(this.checked) {
                    Area = 1;
                }
            });

            $('.segmento').each(function () {
                if(this.checked) {
                    Segmento = 1;
                }
            });

            
            
            if((check == 1) || (TPE == 0) || (Area == 0) || (Segmento == 0)) {
                $('#txtmsg').html('Verifique os campos obrigatórios!');
                $('#msg').show();
                enviar = 1;
            }else{
                $('#txtmsg').html('');
                $('#msg').hide();
            }
            
            var data = new Date();
            var dia     = data.getDate();
            var mes     = data.getMonth();
            var ano = data.getFullYear();
            var dtAtual = dia+'/'+mes+'/'+ano;
            
            var dtInicioElaboracao = $('#dtInicioElaboracao').val();
            var dtFimElaboracao   = $('#dtFimElaboracao').val();
            
            var dtInicioRealizacao = $('#dtInicioRealizacao').val();
            var dtFimRealizacao   = $('#dtFimRealizacao').val();
            
            if( (new Date(dtAtual).getTime() > new Date(dtInicioElaboracao).getTime())){
                $('#txtmsg').append('<br />Fase de Inscrição: A data de início não pode ser menor que a data atual.');
                $('#msg').show();
                enviar = 1;
            }
            
            if( (new Date(dtInicioElaboracao).getTime() > new Date(dtFimElaboracao).getTime())){
                $('#txtmsg').append('<br />Fase de Inscrição: A data de início não pode ser maior que a do fim.');
                $('#msg').show();
                enviar = 1;
            }
            
            <?php if($this->existePRP == 1):?>
                
                if( (new Date(dtInicioRealizacao).getTime() > new Date(dtFimRealizacao).getTime())){
                    $('#txtmsg').append('<br />Realização do projeto: A data de início não pode ser maior que a do fim.');
                    $('#msg').show();
                    enviar = 1;
                }

                if( (new Date(dtFimElaboracao).getTime() > new Date(dtInicioRealizacao).getTime())){
                    $('#txtmsg').append('<br />Realização do projeto: A data de início não pode ser maior que a do fim da Fase de Inscrição.');
                    $('#msg').show();
                    enviar = 1;
                }
            
            <?php endif;?>
            
            
            // Enviar o Form
            if((enviar == 0)) {
                $('#txtmsg').html('');
                $('#msg').hide();
                $('#formularioProcuracao').submit();
            }
            
            
        });

