<script>
    function confirma (functionsim, functionnao){
        $("#confirm").dialog({
            title :'Confirma',
            resizable: false,
            width:400,
            height:150,
            modal: true,
            autoOpen:false,
            buttons: {
                'Não': functionnao,
                'Sim': functionsim
            }
        });
    }
    $(document).ready(function(){
        $("table").tablesorter();
        $("#error").dialog({
            title :'Erro',
            resizable: false,
            width:400,
            height:170,
            modal: true,
            autoOpen:false,
            buttons: {
                'OK': function() {
                    $(this).dialog('close');
                }
            }
        });
        $(".resposta").click(function(){
            var idagente = $(this).attr('idagente');
            var idmensagem = $(this).attr('idMensagem');
            $("#resposta").dialog({
                resizable: false,
                width:1000,
                height:600,
                modal: true,
                autoOpen:false,
                title : 'Responder mensagem',
                buttons : {
                    'Cancelar': function(){
                        $(this).dialog('close')
                    },
                    'Enviar resposta' : function(){
                        var justificativa = $("#dsMensagem").val();
                        var validar = true;
                        if((justificativa.length < 20)){
                            validar = false;
                            var msgError = 'Mensagem menor que 20 caracteres.'
                        }
                        else if((justificativa.length > 5000)){
                            validar = false;
                            var msgError = 'Mensagem maior que 5000 caracteres.'
                        }
                        else if(($("#encaminhar").val() == 0)){
                            validar = false;
                            var msgError = 'Dados Obrigatórios nao informados.'
                        }
                        if(!validar){
                            $('#error').html(msgError);
                            $('#error').dialog('open');
                        }
                        else{
                            $('#confirm').html('Tem certeza que deseja enviar essa mensagem?');       
                            confirma(function(){
                                $("#idMensagemProjeto").val(idmensagem);
                                $("#idAgente").val(idagente);
                                $('#formulario')[0].submit();
                            },
                            function(){
                                $('#confirm').dialog('close');
                            });
                            $('#confirm').dialog('open');
                        }

                    }
                }
            });
            $("#resposta").dialog('open');
        })
    })
    
</script>
