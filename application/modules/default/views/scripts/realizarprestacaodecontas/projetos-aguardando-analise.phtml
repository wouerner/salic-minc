<script>
    $(document).ready(function(){
        $(".orderByAG").click(function(){
            var campo = $(this).attr("valorOrdenacaoAG");

            if("ASC" == $("#tipoOrdenacaoAG").val()){
                tipo = "DESC";
            }else{
                tipo = "ASC";
            }

