        function btnAjax(url, btn) 
        {
            btn = jQuery(btn);
            btnId = btn.attr('id');
            i = btn.find('i');

            if (jQuery('#div'+ btnId).is(':empty')) {

                $.get(url, function(data){
                    jQuery('#div'+ btnId).html(data);
                    i.text('expand_more')
                    //
                    $( "ul.tabs" ).unbind();
                    $3('ul.tabs').tabs();
                });

            } else {

                div = jQuery('#div'+ btnId);
                div.toggleClass('hide');
                if (i.text() == 'chevron_right'){
                    i.text('expand_more')
                } else {
                    i.text('chevron_right')
                }
            }
