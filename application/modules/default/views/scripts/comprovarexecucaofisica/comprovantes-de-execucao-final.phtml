<script type="text/javascript">
    $(document).ready(function(){

        $('#btn_salvar').click(function(){
            var preenchimento = false;
            $('.obrigatorio').each(function(){
                if($.trim($(this).val()) == '')
                    preenchimento = true;
            });

            if(preenchimento) {
                $("#camposObrigatorios").dialog("destroy");
                $("#camposObrigatorios").html("Favor preencher os dados obrigat&oacute;rios!");
                $("#camposObrigatorios").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:320,
//                    height:160,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            } else {
                $('#formCadastroComprovante').submit();
            }
        });

        $('.btn_excluir').click(function(){
            var id = $(this).attr('arquivo');
            $("#modalPerguntas").dialog("destroy");
            $("#modalPerguntas").html("Deseja realmente excluir o arquivo?");
            $("#modalPerguntas").dialog({
                resizable: false,
                title: 'Alerta!',
                width:330,
                height:160,
                modal: true,
                buttons : {
                    'Não' : function(){
                        $(this).dialog('close');
                    },
                    'Sim' : function(){
                        $("#modalPerguntas").dialog('close');
                        $.ajax({
                            type: 'POST',
                            url: '<?php echo $this->url(array('controller' => 'comprovarexecucaofisica', 'action' => 'excluir-comprovante-execucao'), '', true); ?>?idpronac=<?php echo Seguranca::encrypt($this->idPronac); ?>',
                            data: {
                                arquivo: id
                            },
                            success: function(data){
                                if(data.resposta){
                                    $("#alerta").dialog("destroy");
                                    $("#alerta").html('<br /><div align="center"><img src="<?php echo $this->baseUrl().'/public/img/ajax.gif'; ?>"></div>');
                                    $("#alerta").dialog({
                                        resizable: false,
                                        width:320,
                                        height:120,
                                        modal: true,
                                        title: 'Carregando..'
                                    });
                                    $('.ui-dialog-titlebar-close').remove();
                                    window.setTimeout('location.reload()', 1000);
                                } else {
                                    alertaModal("Não foi possível excluir o Plano de Distribuição.");
                                }
                            },
                            dataType : 'json'
                        });
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();
        });

    });

    function alertaModal(msg){
        $("#alerta").dialog("destroy");
        $("#alerta").html(msg);
        $("#alerta").dialog({
            resizable: false,
            title: 'Alerta!',
            width:330,
            height:170,
            modal: true,
            buttons : {
                'OK' : function(){
                    $(this).dialog('close');
                }
            }
        });
        $('.ui-dialog-titlebar-close').remove();
    }
</script>

