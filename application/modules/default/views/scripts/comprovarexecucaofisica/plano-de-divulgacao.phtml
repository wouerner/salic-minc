<script type="text/javascript">
    $(document).ready(function(){
        $('#btn_salvar').click(function(){
            var preenchimento = false;
            $('.obrigatorio').each(function(){
                $(this).css('border-color','#CCC');
                if($.trim($(this).val()) == ''){
                    preenchimento = true;
                    $(this).css('border-color','red');
                }
            });

            if(preenchimento) {
                $("#camposObrigatorios").dialog("destroy");
                $("#camposObrigatorios").html("Favor preencher os dados obrig&aacute;torios!");
                $("#camposObrigatorios").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:320,
                    height:160,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            } else {
                $('#formCadastro').submit();
            }
        });

        $('.selectPlnDiv').change(function(){
            var select = $(this).val(),
                n = select.split(":");

            if(n[0] == 2){
                $('#arquivo'+n[1]).removeClass('sumir');
                $('#arquivo'+n[1]).addClass('obrigatorio');
            } else {
                $('#arquivo'+n[1]).addClass('sumir');
                $('#arquivo'+n[1]).removeClass('obrigatorio');
            }

        });

        $('#novoPeca').change(function(){
            if($.trim($(this).val()) != ''){
                $('#novoPeca').addClass('obrigatorio');
                $('#novoVeiculo').removeAttr('disabled');
                $('#novoVeiculo').addClass('obrigatorio');
                $('#arquivoNovo').addClass('obrigatorio');
            } else {
                $('#novoPeca').removeClass('obrigatorio');
                $('#novoVeiculo').attr('disabled','disabled');
                $('#novoVeiculo').removeClass('obrigatorio');
                $('#arquivoNovo').removeClass('obrigatorio');
            }
        });

        $('.btn_excluir').click(function(){
            var id = $(this).attr('idPln'),
                arquivo = $(this).attr('idArquivo');
            $("#modalPerguntas").dialog("destroy");
            $("#modalPerguntas").html("Deseja realmente desfazer a comprovação desse Plano de Divulgação?");
            $("#modalPerguntas").dialog({
                resizable: false,
                title: 'Alerta!',
                width:320,
                height:180,
                modal: true,
                buttons : {
                    'Não' : function(){
                        $(this).dialog('close');
                    },
                    'Sim' : function(){
                        $("#modalPerguntas").dialog('close');
                        $.ajax({
                            type: 'POST',
                            url: '<?php echo $this->url(array('controller' => 'comprovarexecucaofisica', 'action' => 'excluir-plano-divulgacao'), '', true); ?>?idpronac=<?php echo Seguranca::encrypt($this->idPronac); ?>',
                            data: {
                                plano: id,
                                arquivo: arquivo
                            },
                            success: function(data){
                                if(data.resposta){
                                    $("#alerta").dialog("destroy");
                                    $("#alerta").html('<br /><div align="center"><img src="<?php echo $this->baseUrl().'/public/img/ajax.gif'; ?>"></div>');
                                    $("#alerta").dialog({
                                        resizable: false,
                                        width:320,
                                        height:120,
                                        modal: true,
                                        title: 'Carregando..'
                                    });
                                    $('.ui-dialog-titlebar-close').remove();
                                    window.setTimeout('location.reload()', 1000);
                                } else {
                                    alertaModal("Não foi possível excluir o Plano de Divulgação.");
                                }
                            },
                            dataType : 'json'
                        });
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();
        });

    });

    function alertaModal(msg){
        $("#alerta").dialog("destroy");
        $("#alerta").html(msg);
        $("#alerta").dialog({
            resizable: false,
            title: 'Alerta!',
            width:320,
            height:160,
            modal: true,
            buttons : {
                'OK' : function(){
                    $(this).dialog('close');
                    location.reload();
                }
            }
        });
        $('.ui-dialog-titlebar-close').remove();
    }
</script>

