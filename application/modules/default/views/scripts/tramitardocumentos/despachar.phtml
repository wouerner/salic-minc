    function sumiraqui(id){
        $('img[class='+id+']').toggle();
        $('tr[class='+id+']').toggle();
    }

    function excluir(id, action){
        $("#confirm").dialog("destroy");
        $("#confirm").dialog({
            width:350,
            height:150,
            EscClose:false,
            modal:true,
            buttons: {
                'Cancelar':function(){
                    $(this).dialog('close'); // fecha a modal
                },
                'Confirmar':function(){
                    window.location='./excluirdoc?iddoc='+id+'&action='+action;
                }
            }
        });
        $("#confirm").dialog('open');
    }

    function buscarProjeto(v){
        if($("#pronac").val().length < 6){
            $("#error").html('Pronac tem que ter no mínimo 6 caracteres!');
            $("#error").dialog('open');
            $("#error").dialog({
                width:350,
                height: 180,
                modal: true,
                draggable: false,
                resizable: false,
                closeOnEscape: false,
                buttons: {
                    'OK': function(){
                        $(this).dialog('close');
                    }
                }
            });
            $(".ui-dialog-titlebar-close").remove();
        } else {
            $.ajax({
                type: "POST",
                dataType: 'json',
                data:{
                    pronac: v
                },

                url: '../tramitardocumentos/buscaprojeto',
                success: function(data){

                    for (i in data){
                        if (data[i].msg == 'ok'){
                            var codOrgao = <?php echo $this->codOrgao; ?>

                            $('#l_localizacao').html('Localização: '+data[i].localizacao);
                            $('#l_processonome').html(data[i].processonome);
                            $('#idpronac').val(data[i].idpronac);
                            $('#idDestino').val(data[i].Orgao);
                            $('#btnSalvar').show();
                            $('#mostraMsg').html('');
                        } else {
                            $('#l_localizacao').html('Projeto não Cadastrado!');
                            $('#l_processonome').html('');
                            $('#idpronac').val('');
                        }
                    }
                },
                error: function(data){
                    $('#l_erro').html('Informe o Pronac!');
                    //alert('Falha na recuperação dos dados.\nNão foi possível carregar os e-mails!');
                }
            });
        }
    }
</script>

