    function verificaDatas() {
        switch($("#periodo").val())
        {
            case 'entreDatas':
                if ($("#datainicio").val() != '' && $("#datafim").val() != '') {
                    if (1 == compararDataInicialDataFinal($("#datainicio").val(),$("#datafim").val())) {
                        alert("A Data Inicial n\xE3o pode ser maior que a Final");
                    } else {
                        $('#formConsulta').submit();
                    }
                } else {
                    alert ("Coloque as datas");
                }
                break;
            case 'exatamente':
                if ($("#datainicio").val() < 1 ) {
                    alert("Coloque a Data");
                } else {
                    $('#formConsulta').submit();
                }
                break;
            default:
                $('#formConsulta').submit();
        }
    }
    function datas(valor) {
        switch(valor)
        {
            case 'exatamente':
                $("#datainicio").show();
                $("#datafim").val('');
                $("#datafim").hide();
                $("#ldata").hide();
                break;
            case 'entreDatas':
                $("#datainicio").show();
                $("#datafim").show();
                $("#ldata").show();
                break;
            default:
                $("#datafim").hide();
                $("#datainicio").hide();
                $("#ldata").hide();
                break;
        }
    }
    
</script>
