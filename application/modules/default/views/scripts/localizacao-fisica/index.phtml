<script>
    $(document).ready(function () {
        // Init
        initView($('input[type=radio]:checked'));
        // Events
        $('input[type=radio]').change(function () {
            initView($(this));
        });
        $('.novo').each(function () {
            $(this).click(function () {
                $.get('<?php echo $this->url(array('action' => 'cadastrar')); ?>/pronac/' + $(this).attr('data-pronac'), function (result) {
                    $('#dialog').html(result);
                    $("#dialog").dialog({
                        width: 780,
                        height: 300,
                        modal: true,
                        title: 'Incluir Localização Física do Projeto',
                        resizable: true
                    });
                });
            });
        });
        $('.historico').each(function () {
            $(this).click(function () {
                $.get('<?php echo $this->url(array('action' => 'historico')); ?>/pronac/' + $(this).attr('data-pronac'), function (result) {
                    $('#dialog').html(result);
                    $("#dialog").dialog({
                        width: 780,
                        height: 400,
                        modal: true,
                        title: 'Histórico de Localização Física do Projeto',
                        resizable: true
                    });
                });
            });
        });
        
        $('.btn_imprimir').click(function(){
            $('#addCampoXls').remove();
            $('#formImpressao').submit();
        });
        
        $('.btn_xls').click(function(){
            $('#addCampoXls').remove();
            $('#formImpressao').append('<input id="addCampoXls" type="hidden" name="xls" value="1">');
            $('#formImpressao').submit();
        });
    });
    var initView = function (element) {
        $('#' + element.val()).closest('table').find('tr.hideable').each(function () {
            $(this).find('input,select').attr('disabled', 'disabled');
            $(this).addClass('sumir');
        });
        $('#' + element.val()).closest('tr').find('input,select').attr('disabled', '')
        $('#' + element.val()).closest('tr').removeClass('sumir');
    };
</script>
