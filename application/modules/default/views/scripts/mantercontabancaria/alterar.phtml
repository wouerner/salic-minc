<script type="text/javascript">
    function modalJustificativa(id){
        $("#modalHistorico"+id).dialog("destroy");
        $("#modalHistorico"+id).dialog({
            resizable: true,
            title: 'Justificativa',
            width: 420,
            height: 220,
            modal: true
        });
