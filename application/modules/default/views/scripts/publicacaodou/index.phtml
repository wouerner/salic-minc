<script type="text/javascript" id="js">
    $(document).ready(function(){
        
        $("#checkall").click(function(){
            $("input[type='checkbox']").each(function(){
                if($(this).attr('checked') == true)
                {
                    $("#checkall").attr('checked',false);
                    $(this).attr('checked',false);
                }
                else{
                    $("#checkall").attr('checked',true);
                    $(this).attr('checked',true);
                }
            })
        });

        $('#btn_publicar').click(function(){
            var checado = 0,
                erros = 0,
                msg = '',
                nrPortaria = $('#nrPortaria').val();
            $("input[type='checkbox']").each(function(){
                if($(this).attr('checked') == true){
                    checado++;
                }
            });
            
            if(checado == 0){
               erros++; 
               msg += '- Selecione pelo menos um projeto.<br/>';
            }
            
            if(nrPortaria.length != 4){
               erros++;
               msg += '- Digite o número da portaria (4 dígitos).<br/>';
            }
            
            if(erros > 0){
                $("#msgAlerta").dialog("destroy");
                $("#msgAlerta").html(msg);
                $("#msgAlerta").dialog({
                    resizable: false,
                    title: 'Atenção!',
                    width:360,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            } else {
                $("#msgAlerta").dialog("destroy");
                $("#msgAlerta").html('<center><br />Carregando...<br />Por favor, aguarde!!<center>');
                $("#msgAlerta").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:300,
                    height:150,
                    modal: true
                });
                $('.ui-dialog-titlebar-close').remove();
                $('#formularionaopublicado').submit();
            }
        });
        
        $('#btn_pesquisar').click(function(){
            $('#formPesquisa').submit();
        });
        
    });
</script>

