            },
            beforeSend: function() {
                $("#votacao_"+idPronac).html('<br><center>Aguarde, consolidando votação...<br><img src="<?php echo $this->baseUrl(); ?>/public/img/ajax.gif" /></center><br>');
            },
            success: function(data)
            {
                if(!data.error){
                    $("#projetoemvotacao_"+idPronac).addClass("sumir");
                    message(msgAdicional + ' Votação consolidada com sucesso!', 'CONFIRM');
                }else{
                    $("#projetoemvotacao_"+idPronac).addClass("sumir");
                    message('Erro! N&atilde;o foi poss&iacute;vel realizar consolidação da votação. ' + data.descricao, 'ERROR');
                }
                return false;
            },
            complete: function(){
                
                /*var qtdeVotacoesConsolidadas = $("#qtdeVotacoesConsolidadas").val();
