                data: {
                    idpronac: idpronac
                },
                success: function(data){

                    $('#aprovados_'+idpronac).html(data.aprovados);
                    $('#indeferidos_'+idpronac).html(data.indeferidos);
                    $('#abstencao_'+idpronac).html(data.abstencao);
