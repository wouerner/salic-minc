            return false;
        }

        var dtInicio = $("#dtinicio").val();
        var dtFim = $("#dtfim").val();
        var dtAtual = $("#dtatual").val();
        var arrAtual = dtAtual.split("/");
        dtAtual = arrAtual[2]+arrAtual[1]+arrAtual[0];

