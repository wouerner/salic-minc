<script type="text/javascript">

    function buscaEtabas(idProduto){
        var id = idProduto,
            divMsg = $('#divMsg');
        divMsg.show();
        divMsg.html('<center><img src="<?php echo $this->baseUrl(); ?>/../public/img/ajax.gif" /><br />Carregando...<center>');

        $.ajax({
            type: 'POST',
            url: "<?php echo $this->url(array('module' => 'proposta', 'controller' => 'mantertabelaitens', 'action' => 'buscaetapas', 'idPreProjeto' => $this->idPreProjeto)); ?>",
            data:{
                idProduto: id
            },
            success: function(data){
                divMsg.hide();
                $('#etapa_'+id).html(data);

            },
            error: function (data){
                divMsg.html("Falha na recupera&ccedil;&atilde;o dos dados.\nN&atilde;o foi poss&iacute;vel carregar etapas!");
            }
        });
    }

    function buscaItens(idProduto, idEtapa){
        var idP = idProduto,
            idE = idEtapa;

        var divMsg = $('#divMsg2');
        divMsg.show();
        divMsg.html('<center><img src="<?php echo $this->baseUrl(); ?>/../public/img/ajax.gif" /><br />Carregando...<center>');

        $.ajax({
            type: 'POST',
            url: "<?php echo $this->url(array('module' => 'proposta', 'controller' => 'mantertabelaitens', 'action' => 'buscaitens', 'idPreProjeto' => $this->idPreProjeto)); ?>",
            data:{
                idProduto: idP,
                idEtapa: idE
            },
            success: function(data){
                divMsg.hide();
                $('#item_'+idP+idE).html(data);

            },
            error: function (data){
                divMsg.html("Falha na recupera&ccedil;&atilde;o dos dados.\nN&atilde;o foi poss&iacute;vel carregar os itens!");
            }
        });
    }

    function mostraOcultaElemento(elemento){
        $('.' + elemento).toggle();
        if ($('#' + elemento).hasClass('btn_adicionar')){
            $('#' + elemento).addClass('btn_remover');
            $('#' + elemento).removeClass('btn_adicionar');
        } else {
            $('#' + elemento).addClass('btn_adicionar');
            $('#' + elemento).removeClass('btn_remover');
        }
    }
</script>
