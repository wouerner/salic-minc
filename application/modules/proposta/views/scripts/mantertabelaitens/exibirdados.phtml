    function mostraOcultaElemento(elemento){
        $('.' + elemento).toggle();
        if ($('#' + elemento).hasClass('btn_adicionar')){
            $('#' + elemento).addClass('btn_remover');
            $('#' + elemento).removeClass('btn_adicionar');
        } else {
            $('#' + elemento).addClass('btn_adicionar');
            $('#' + elemento).removeClass('btn_remover');
        }
    }
