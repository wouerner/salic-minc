                if (nomeProponente == "- TODOS -") {
                    $("#msgValidaProponente").html("<font color='red'>Informe o nome de um Proponente.</font>");
                    return false;
                }
                jqAjaxForm(form, 'propostasCadastradas');
            }
        });

    });
