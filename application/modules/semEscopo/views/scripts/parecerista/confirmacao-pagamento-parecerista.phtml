<script>

    $(document).ready(function(){
       
    });
    
    function confirmarAssinatura(id){
        
        $('#rpa_'+id).css('border','solid 1px #ccc');
        
        if($('#rpa_'+id).is(":empty")){
            $('#rpa_'+id).css('border','solid 1px red');
            $('#label_'+id).html('É preciso fazer o Upload do RPA assinado! &nbsp; &nbsp; &nbsp;');
//            return false;
        }
        
        $("#dialog").html('Deseja confirmar o pagamento?');
        $("#dialog").dialog("destroy");
        $("#dialog").dialog({
            width: '400px',
            modal: true,
            draggable: false,
            resizable: false,
            closeOnEscape: false,
            title: 'Confirmação',
            buttons: { 
                Não:function() {
                    $(this).dialog('close');
                },
                Sim:function() {
                    $('#form_'+id).submit();
                }
            }
        });

        $('.ui-dialog-titlebar-close').remove();
            
    }
    
</script>