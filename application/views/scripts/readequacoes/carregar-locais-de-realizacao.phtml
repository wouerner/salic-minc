<script type="text/javascript">
    $(document).ready(function(){
        $('#adicionarLocalRealizacao').unbind('click').click(function(){
            
            $('#newPaisLR').val('31');
            $('#newPaisLR').change();
            
            $("#modalInclusaoLR").dialog({
                resizable: false,
                title: 'Inclusão de Local de Realização!',
                width: 800,
                modal: true,
                buttons : {
                    'Cancelar' : function(){
                        $(this).dialog('close');
                    },
                    'Salvar' : function(){
                        var idPais = $('#newPaisLR').val(),
                            idUF = $('#newUFLR').val(),
                            idMunicipio = $('#newMunicipioLR').val();
                    
                        $.ajax({
                            type: 'POST',
                            url: '<?php echo $this->url(array('controller' => 'readequacoes', 'action' => 'incluir-local-de-realizacao'), '', true); ?>?idPronac=<?php echo Seguranca::encrypt($this->idPronac); ?>',
                            data: {
                                newPaisLR: idPais,
                                newUFLR: idUF,
                                newMunicipioLR: idMunicipio
                            },
                            success: function(data){
                                $("#modalInclusaoLR").dialog('destroy');
                                $("#modalInclusaoLR").html('');
                                $("#modalInclusaoLR").dialog( "widget" ).remove();
                                
                                if(!data.resposta){
                                    $("#msgAlerta").dialog("destroy");
                                    $("#msgAlerta").html(data.msg);
                                    $("#msgAlerta").dialog({
                                        resizable: false,
                                        title: 'Alerta!',
                                        width:360,
                                        modal: true,
                                        buttons : {
                                            'OK' : function(){
                                                $(this).dialog('close');
                                            }
                                        }
                                    });
                                    $('.ui-dialog-titlebar-close').remove();
                                }
                                atualizarDadosLocaisRealizacao();
                            },
                            dataType : 'json'
                        });
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();
        });
        
        $('.btnExcluirLR').click(function(){
            var idAbrangencia = $(this).attr('idAbrangencia'),
                itemClicado = $(this);
                
            //ABRE O MODAL DE CONFIRMAÇÃO DA AÇÃO REALIZADA
            $("#msgAlerta").dialog("destroy");
            $("#msgAlerta").html('Tem certeza que deseja excluir o local de realização?');
            $("#msgAlerta").dialog({
                resizable: false,
                title: 'Alerta!',
                width:390,
                height:170,
                modal: true,
                buttons : {
                    'Não' : function(){
                        itemClicado.parent().parent().removeClass('fundo_linha4');
                        $(this).dialog('close');
                    },
                    'Sim' : function(){
                        $.ajax({
                            type: 'POST',
                            url: '<?php echo $this->url(array('controller' => 'readequacoes', 'action' => 'excluir-local-de-realizacao'), '', true); ?>?idPronac=<?php echo $this->idPronac; ?>',
                            data: {
                                idAbrangencia: idAbrangencia
                            },
                            success: function(data){
                                $("#msgAlerta").dialog("destroy");
                                atualizarDadosLocaisRealizacao();
                            },
                            dataType : 'json'
                        });
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();
        });
        
        $('#newPaisLR').change(function(){
            var idPais = $(this).val();
            if(idPais == 31){
                $("#newMunicipioLR").addClass('obrigatoriosLocalRealizacao');
                $("#newMunicipioLR").removeAttr('disabled');

                $("#newUFLR").addClass('obrigatoriosLocalRealizacao');
                $("#newUFLR").removeAttr('disabled');
            } else {
                $('.obrigatoriosLocalRealizacao').each(function(){
                    $(this).css('border-color', '#CCCCCC');
                });

                $("#newUFLR").removeClass('obrigatoriosLocalRealizacao');
                $("#newMunicipioLR").removeClass('obrigatoriosLocalRealizacao');
                
                $("#newUFLR").attr('disabled',true);
                $("#newMunicipioLR").attr('disabled',true);
                
                $("#newUFLR").val('');
                $("#newMunicipioLR").val('');
            }
        });
        
        $('#newUFLR').change(function(){
            $("#newMunicipioLR").html('<option value=""> - Carregando - </option>');
            if($(this).val() == 0){
                $("#newMunicipioLR").html('<option value=""> - Selecione - </option>');
            }
            else{
                $.ajax({
                    url : '<?php echo $this->url(array('controller' => 'readequacoes', 'action' => 'carregar-locais-de-realizacao'), null, true); ?>?idPronac=<?php echo Seguranca::encrypt($this->idPronac); ?>',
                    type: "POST",
                    data :{
                        iduf : $(this).val()
                    },
                    success: function(valor){
                        $("#newMunicipioLR").html('<option value=""> - Selecione - </option>');

                        for(a in valor){
                            $("#newMunicipioLR").append('<option value="'+valor[a].idCidade+'">'+valor[a].nomeCidade+'</option>');
                        }
                    },
                    type : 'post',
                    dataType : 'json'
                });
            }
        });
        
        $('.restaurarItemLocalRealizacao').click(function(){
            var idAbrangencia = $(this).attr('idAbrangencia'),
                tpAcao = $(this).attr('tipo'),
                msg = '';
                
            if(tpAcao == 'I'){
                msg = 'Tem certeza que deseja excluir o local de realização adicionado?';
            } else {
                msg = 'Tem certeza que deseja restaurar o local de realização excluído?';
            }
            
            $("#msgAlerta").dialog("destroy");
            $("#msgAlerta").html(msg);
            $("#msgAlerta").dialog({
                resizable: false,
                width:340,
                modal: true,
                title: 'Alerta!',
                buttons : {
                    'Não' : function(){
                        $(this).dialog('close');
                    },
                    'Sim' : function(){
                        $(this).dialog("close");
                        $.ajax({
                            type: 'POST',
                            url: '<?php echo $this->url(array('controller' => 'readequacoes', 'action' => 'alteracoes-tecnicas-no-local-de-realizacao'), '', true); ?>?idPronac=<?php echo $this->idPronac; ?>',
                            data: {
                                idAbrangencia: idAbrangencia,
                                tpAcao: tpAcao
                            },
                            success: function(data){
                                <?php if($this->idPerfil == 1111){ ?>
                                    atualizarDadosLocaisRealizacao();
                                <?php } else { ?>
                                    jqAjaxLinkSemLoading('<?php echo $this->Url(array('controller' => 'readequacoes', 'action' => 'carregar-locais-de-realizacao-readequacoes'), '', true) ?>?idPronac=<?php echo $this->idPronac; ?>&idReadequacao=<?php echo $this->idReadequacao; ?>', '', 'locaisParaRealizacao');
                                <?php } ?>
                            },
                            dataType : 'json'
                        });
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();
        });
        
        $('.comboLocaisRealizacao').change(function(){
            var tpAcao = $(this).val(),
                idAbrangencia = $(this).attr('idabr'),
                select = $(this);
                
            if(tpAcao != ''){
                $("#alerta").dialog("destroy");
                $("#alerta").html('Deseja realmente avaliar o item?');
                $("#alerta").dialog({
                    resizable: false,
                    width:340,
                    modal: true,
                    title: 'Alerta!',
                    buttons : {
                        'Não' : function(){
                            $(this).dialog('close');
                            select.val('');
                        },
                        'Sim' : function(){
                            $(this).dialog('close');
                            $.ajax({
                                type: 'POST',
                                url: '<?php echo $this->url(array('controller' => 'readequacoes', 'action' => 'alteracoes-tecnicas-no-local-de-realizacao'), '', true); ?>?idPronac=<?php echo $this->idPronac; ?>',
                                data: {
                                    idAbrangencia: idAbrangencia,
                                    tpAcao: tpAcao
                                },
                                success: function(data){
                                    <?php if($this->idPerfil == 1111){ ?>
                                        atualizarDadosLocaisRealizacao();
                                    <?php } else { ?>
                                        jqAjaxLinkSemLoading('<?php echo $this->Url(array('controller' => 'readequacoes', 'action' => 'carregar-locais-de-realizacao-readequacoes'), '', true) ?>?idPronac=<?php echo $this->idPronac; ?>&idReadequacao=<?php echo $this->idReadequacao; ?>', '', 'locaisParaRealizacao');
                                    <?php } ?>
                                },
                                dataType : 'json'
                            });
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            }
        });
    });
