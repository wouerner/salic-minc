<script type="text/javascript"> 
    $(document).ready(function(){
        $(".btn_pesquisar").click(function(){
            
            var reuniao = $('#reuniao').val();
            var pronac  = $('#pronac').val();
            var tecnico = $('#tecnico').val();
            
            $('#msgErro').html('');
            
            if($.trim(reuniao) != "")
