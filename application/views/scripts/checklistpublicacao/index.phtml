        var dia = datacalculada.getDate();
        var mes = (datacalculada.getMonth()+1)
        var ano = datacalculada.getFullYear();
        
        if (  dia < 10 )
        {
            dia = "0" + dia;
        }

        if (  mes < 10 )
        {
            mes = "0" + mes;
        }
        
        datacalculada = dia + '/' + mes + '/' + ano;
        return datacalculada;
      
