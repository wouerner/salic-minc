<script type="text/javascript">
    $(document).ready(function(){
        $('.btn_salvar').click(function(){
            var validar = true;
            $('.valida').each(function(){
                if($(this).val() == ''){
                    validar = false;
                }
            });
            if(validar == false){
                $("#error").dialog("destroy");
                $('#error').html('Dados obrigatórios n&atilde;o informados.');
                $("#error").dialog({
                    modal: true,
                    draggable: false,
                    resizable: false,
                    closeOnEscape: false,
                    buttons: {
                        'Ok': function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            }
            if(erro) {
                if (erro == 0){
                    $("#confirm2").dialog("destroy");
                    $("#confirm2").dialog({
                        EscClose:false,
                        modal:true,
                        buttons:{
                            'Ok':function(){
                                $(this).dialog('close');
                                return false;
                            }
                        }
                    });
                    return false;
                } else {
                    if (erro == 7){
                        $("#confirm7").dialog("destroy");
                        $("#confirm7").dialog({
                            EscClose:false,
                            modal:true,
                            buttons: {
                                'Ok':function(){
                                    $(this).dialog('close');
                                    return false;
                                }
                            }
                        });
                        return false;
                    } else {
                        if (erro == 8){
                            $("#confirm8").dialog("destroy");
                            $("#confirm8").dialog({
                                EscClose:false,
                                modal:true,
                                buttons:{
                                    'Ok':function(){
                                        $(this).dialog('close');
                                        return false;
                                    }
                                }
                            });
                            return false;
                        } else {
                            if($("#final").val() <= 0 || $("#inicial").val() <= 0){
                                $("#confirm5").dialog("destroy");
                                $("#confirm5").dialog({
                                    EscClose:false,
                                    modal:true,
                                    buttons: {
                                        'Ok':function(){
                                            $(this).dialog('close');
                                            return false;
                                        }
                                    }
                                });
                                return false;
                            }

                            if($("#final").val() < $("#inicial").val()){
                                $("#confirm6").dialog("destroy");
                                $("#confirm6").dialog({
                                    EscClose:false,
                                    modal:true,
                                    buttons: {
                                        'Ok':function(){
                                            $(this).dialog('close');
                                            return false;
                                        }
                                    }
                                });
                                return false;
                            }

                            $("#confirm4").dialog("destroy");
                            $("#confirm4").dialog({
                                EscClose:false,
                                modal:true,
                                buttons: {
                                    'Cancelar':function(){
                                        $(this).dialog('close');
                                    },
                                    'Confirmar':function(){
                                        document.forms["form"].submit();
                                    }
                                }
                            });
                            return false;
                        }
                    }
                }
            }
        });

        $('.numero').keydown(function(event){
            if((event.keyCode >= 96 && event.keyCode <= 105) || (event.keyCode >= 48 && event.keyCode <= 57) || event.keyCode == 8 || event.keyCode ==9 ){
                return true;
            } else {
                return false;
            }
        });

    });

    function sumiraqui(id){
        $('img[class='+id+']').toggle();
        $('tr[class='+id+']').toggle();
    }

    function buscarProjeto2(v){
        $.ajax({
            url : '<?php echo $this->url(array('controller' => 'tramitarprojetos', 'action' => 'buscaprojetodesarquivado')); ?>',
            data : {
                pronac: v,
                codOrgao: <?php echo $this->codOrgao; ?>,
                msg : 'ok'
            },
            success: function(data){
                recebe = $('#orgaoERROR');
                if(data.resposta){
                    for ( i in data.conteudo){
                        recebe.html(data.conteudo.NomeProjeto+' - '+data.conteudo.Processo+' - '+data.conteudo.Sigla+' - '+data.conteudo.Orgao);
                        recebe.css("color", "black");
                        erro = 1;
                    }
                } else {
                    recebe.html('Este projeto já se encontra arquivado');
                    recebe.css("color", "red");
                    erro = 0;
                }
            },
            type : 'post'
            ,dataType : 'json'
        });
    }

    function buscarProjeto(v){
        $.ajax({
            url : '<?php echo $this->url(array('controller' => 'tramitarprojetos', 'action' => 'buscaprojetodespachar')); ?>',
            data : {
                pronac: v,
                msg : 'ok'
            },
            success: function(data){
                recebe = $('#orgaoERROR');
                if(data.resposta){
                    for ( i in data.conteudo){
                        buscarProjeto2(v);
                    }
                } else {
                    if($("#pronac").val().length < 6){
                        $("#error").html('Pronac tem que ter no mínimo 7 caracteres!');
                        $("#error").dialog('open');
                        $("#error").dialog({
                            modal: true,
                            draggable: false,
                            resizable: false,
                            closeOnEscape: false,
                            buttons: {
                                'Ok': function(){
                                    $(this).dialog('close');
                                }
                            }
                        });
                        $(".ui-dialog-titlebar-close").remove();
                        erro = 8;
                    } else {
                        recebe.html('Pronac Inexistente.');
                        recebe.css("color", "red");
                        erro = 7;
                    }
                }
            },
            type : 'post'
            ,dataType : 'json'
        });
    }
</script>

