            elemento = '#'+id;
            if($(elemento).css('display') == 'none') {
                $(elemento).html('<img src="<?php echo $this->baseUrl(); ?>/public/img/ajax.gif" /> ');
                $(elemento).fadeIn('fast');
                $.ajax({
                    type: "POST",
                    data: {
                        teste: 'testando'
                    },
                    url: url,
                    success: function(data) {
                        $(elemento).html(data);
                    }
                });
            } else {
                $(elemento).fadeOut('fast');
            }
        }
    };
</script>
