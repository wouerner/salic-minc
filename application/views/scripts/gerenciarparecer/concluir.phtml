<script type="text/javascript">
 
  //Contador e limitadores de caracteres

function ExecucaoDaFuncaoLimiterPag(){
		    var caracteres  = CountCharacters('obs'); //valor vindo do ID da textarea
 
                   //Atualização para os contadores de caracteres
		    document.getElementById("contadorobs").innerHTML = "Caracteres: " + caracteres;
                     

}
   //inicializao e configuração do editor tinyMCE

    window.onload = function () {
        tinymce.init({
	    plugins:"paste,textcolor",
	    paste_as_text: true,
            selector: 'textarea',
            width: 1725,
	    toolbar : "bold,italic,underline,color,forecolor backcolor",
	    menubar:"",
            setup: function (ed) {
                ed.on('load', function (e) {
		ExecucaoDaFuncaoLimiterPag();
                }).on('keyup',function (e) {
		ExecucaoDaFuncaoLimiterPag();
		});
            }
        });
    }
    
    //Onde é feita a contagem do elemento do contador
    function CountCharacters(contador) {
        var body = tinymce.get(contador).getBody();
        var content = tinymce.trim(body.innerText || body.textContent);
        return content.length;
    } 




    function confirmaConcluir() {
        $("#msgmodal").html("Deseja Concluir o Produto?");
        $("#modalConfirm").dialog("destroy");
        $("#modalConfirm").dialog({
            title :'Confirmação.',
            resizable: false,
            width:400,
            height:150,
            modal: true,
            autoOpen:false,
            buttons: {
                'Não': function() {
                    $(this).dialog('close');
                },
                'Sim': function() {
                    $('#txtConcluir').html('Aguarde...');
                    $(this).dialog('close');
                    $('#form').submit();
                }
            }
        });
        $("#modalConfirm").dialog('open');
    }
</script>

