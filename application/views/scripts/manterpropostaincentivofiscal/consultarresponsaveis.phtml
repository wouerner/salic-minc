<script type="text/javascript">
    function confirmaracao(idVinculo, siVinculo, idUsuario) {
        if(siVinculo == 1) {
            $("#confirmaracao").html('Deseja realmente rejeitar o vinculo?');
        } else if(siVinculo == 2) {
            $("#confirmaracao").html('Deseja realmente vincular o responsável?');
        } else if(siVinculo == 3) {
            $("#confirmaracao").html('Deseja realmente desvincular o responsável? <br /><br /> As propostas/projetos estarão sob sua responsabilidade!');
        }

        $("#confirmaracao").dialog({
            resizable: true,
            width:450,
            height:200,
            modal: true,
            autoOpen:false,
            closeOnEscape : false,
            title : 'Alerta!',
            buttons: {
                'Não': function() {
                    $(this).dialog('close');
                },
                'Sim': function() {
                    window.location = "<?php echo $this->url(array('controller' => 'vincularresponsavel', 'action' => 'vinculoproponente')); ?>?idVinculo="+idVinculo+"&siVinculo="+siVinculo+"&idUsuario="+idUsuario;
                }
            }
        });
        $("#confirmaracao").dialog('open');
    }
</script>

