<script type="text/javascript">
    $(document).ready(function(){
        $(".btn_enviar").click(function(){
            if(CKEDITOR.instances['justificativa'].getData().toString().replace(/(<.*?>)|(&nbsp;)|(\s+)/g,'').length <=20){
                $("#erro").html("Dados obrigat&oacute;rios n&atilde;o preenchidos ou texto com menos de 21 caracteres!")
                $("#erro").dialog('open');
            }
            else{
                $("#alert").html('Tem certeza que deseja enviar a dilig&ecirc;ncia ao proponente?');
                alert(function(){
                $("#form").submit();
                },
                function(){
                    $("#alert").dialog('close')
                })
                $("#alert").dialog('open');
            }
        })
        $("#erro").dialog({
            title: "Erro!",
            resizable: false,
            width:300,
            height:200,
            modal: true,
            autoOpen:false,
            buttons: {
                'OK':  function(){
                    $(this).dialog('close');
                }
            }
        });
    })

    function alert(functionsim, functionnao){
        $("#alert").dialog({
            title: "Alerta!",
            resizable: false,
            width:400,
            height:200,
            modal: true,
            autoOpen:false,
            buttons: {
                'Nao':  functionnao
                ,
                'Sim':  functionsim
            }
        });
    }
</script>

