<script type="text/javascript">
    $(document).ready(function(){
        $("#btn_pesquisar").click(function(){
            $('#formPesquisa').submit();
        });

        $('.btn_imprimir').click(function(){
            $('#formImpressao').submit();
        });
        
        $('.btn_ver').click(function(){
            var id = $(this).attr('idRecurso');
            window.location = "<?php echo $this->url(array('controller' => 'recurso', 'action' => 'visualizar-recurso')); ?>?id="+id;
        });
        
        $('.enviarRecurso').click(function(){
            var parecerista = $(this).parent().parent().find('select').val(),
                idDistProj = $(this).attr('idDistProj'),
                idRecurso = $(this).attr('idRecurso');
                
            if(parecerista==''){
                $("#alerta").dialog("destroy");
                $("#alerta").html('Favor selecionar o parecerista!');
                $("#alerta").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:320,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            } else {
                $.ajax({
                    type: 'POST',
                    url: '<?php echo $this->url(array('controller' => 'recurso', 'action' => 'encaminhar-recurso'), '', true); ?>',
                    data: {
                        parecerista: parecerista,
                        idDistProj: idDistProj,
                        idRecurso: idRecurso
                    },
                    success: function(data){
                        if(data.resposta){
                            $("#alerta").dialog("destroy");
                            $("#alerta").html('<br /><div align="center"><img src="<?php echo $this->baseUrl().'/public/img/ajax.gif'; ?>"><br />Aguarde..</div>');
                            $("#alerta").dialog({
                                resizable: false,
                                width:320,
                                modal: true,
                                title: 'Carregando..'
                            });
                            $('.ui-dialog-titlebar-close').remove();
                            window.setTimeout('location.reload()', 1000);
                        } else {
                            alertaModal("Não foi possível encaminhar o recurso.");
                        }
                    },
                    dataType : 'json'
                });
            }
        });
        
        $('.btn_finalizar').click(function(){
            var idDistProj = $(this).attr('idDistProj'),
                idRecurso = $(this).attr('idRecurso');

            $("#alerta").dialog("destroy");
            $("#alerta").html('Deseja realmente finalizar a análise do recurso?<br /><br />Ao finalizar o recurso será devolvido ao MinC.');
            $("#alerta").dialog({
                resizable: false,
                title: 'Alerta!',
                width: 430,
                modal: true,
                buttons : {
                    'Não' : function(){
                        $(this).dialog('close');
                    },
                    'Sim' : function(){
                        $.ajax({
                            type: 'POST',
                            url: '<?php echo $this->url(array('controller' => 'recurso', 'action' => 'coord-parecer-finalizar-recurso'), '', true); ?>',
                            data: {
                                idDistProj: idDistProj,
                                idRecurso: idRecurso
                            },
                            success: function(data){
                                if(data.resposta){
                                    $("#alerta").dialog("destroy");
                                    $("#alerta").html('<br /><div align="center"><img src="<?php echo $this->baseUrl().'/public/img/ajax.gif'; ?>"><br />Aguarde..</div>');
                                    $("#alerta").dialog({
                                        resizable: false,
                                        width:320,
                                        modal: true,
                                        title: 'Carregando..'
                                    });
                                    $('.ui-dialog-titlebar-close').remove();
                                    window.setTimeout('location.reload()', 1000);
                                } else {
                                    alertaModal("Não foi possível finalizar o recurso.");
                                }
                            },
                            dataType : 'json'
                        });
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();
            
        });
        
        $('.avaliacaoParecerista').click(function(){
            var id = $(this).attr('idRecurso');
            window.location = "<?php echo $this->url(array('controller' => 'recurso', 'action' => 'form-avaliar-recurso')); ?>?id="+id;
        });
        
    });
</script>

