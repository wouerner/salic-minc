<script type="text/javascript">
    $(document).ready(function(){
        $('.devolverPedido').click(function(){
            var pronac = $(this).attr('pronac'),
                nr = $(this).attr('nr');

            $("#pergunta").dialog("destroy");
            $("#pergunta").html('Deseja realmente devolver o relatório para o Coordenador de Acompanhamento?');
            $("#pergunta").dialog({
                resizable: false,
                title: 'Alerta!',
                width:320,
                height:180,
                modal: true,
                buttons : {
                    'Não' : function(){
                        $("#pergunta").dialog('close');
                    },
                    'Sim' : function(){
                        $("#pergunta").dialog('close');
                        $.ajax({
                            type: 'POST',
                            url: '<?php echo $this->url(array('controller' => 'analisarexecucaofisicatecnico', 'action' => 'devolver-relatorio'), '', true); ?>?idpronac=<?php echo $this->idPronac; ?>',
                            data: {
                                pronac: pronac,
                                nr: nr
                            },
                            success: function(data){
                                if(data.resposta){
                                    $("#alerta").dialog("destroy");
                                    $("#alerta").html('<br /><div align="center"><img src="<?php echo $this->baseUrl().'/public/img/ajax.gif'; ?>"></div>');
                                    $("#alerta").dialog({
                                        resizable: false,
                                        width:320,
                                        height:120,
                                        modal: true,
                                        title: 'Carregando..'
                                    });
                                    $('.ui-dialog-titlebar-close').remove();
                                    window.setTimeout('location.reload()', 1000);
                                } else {
                                    alertaModal("Não foi possível devolver o relatório.");
                                }
                            },
                            dataType : 'json'
                        });
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();

        });

        $('.btn_localizar').click(function(){
            var pronac = $('#campoPesquisa').val();
            location.href="<?php echo $this->baseUrl()."/analisarexecucaofisicatecnico/index?pronac="; ?>"+pronac;
        });

    });

    function avaliarRelatorio(pronac, relatorio){
        location.href="<?php echo $this->baseUrl()."/analisarexecucaofisicatecnico/parecer-tecnico?idpronac="; ?>"+pronac+"&relatorio="+relatorio;
    }

    function alertaModal(msg){
        $("#alerta").dialog("destroy");
        $("#alerta").html(msg);
        $("#alerta").dialog({
            resizable: false,
            title: 'Alerta!',
            width:330,
            height:170,
            modal: true,
            buttons : {
                'OK' : function(){
                    $(this).dialog('close');
                }
            }
        });
        $('.ui-dialog-titlebar-close').remove();
    }
</script>

