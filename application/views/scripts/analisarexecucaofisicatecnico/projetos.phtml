                'Encaminhar': function() {
                    var justificativa = $("#justificativaenvio").val();
                    var orgao = $("#orgao").val();
                    var destinatario = $("#destinatario").val();
                    if($.trim(justificativa)=='' || orgao == '' ||  destinatario==''){
