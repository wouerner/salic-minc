<script type="text/javascript">
    $(document).ready(function(){
        $("#telaencaminhar").dialog({
            title : 'Encaminhar para Análise',
            resizable: false,
            width:800,
            height:600,
            modal: true,
            autoOpen:false,
            buttons: {
                'Cancelar': function() {
                    $(this).dialog('close');
