                $("#erro").dialog
                ({
                    title : 'Confirma' ,
                    width:400,
                    height:150,
                    EscClose:true,
                    modal:true,
                    buttons:
                        {
                        'OK':function()
                        {
                            $(this).dialog('close'); // fecha a modal
                        }
                    }
                });
                $("#erro").dialog('open')
            }
            else{
                $("#Confirma").dialog
                ({
                    title : 'Confirma' ,
                    width:400,
                    height:150,
                    EscClose:true,
                    modal:true,
                    buttons:
                        {
                        'Não':function()
                        {
                            $(this).dialog('close'); // fecha a modal
                        },
                        'Sim':function()
                        {
                            $("#formulario").submit(); // envia o formulário
                        }
                    }
                });
                $("#Confirma").html('Deseja enviar a diligência para o proponente?')
                $("#Confirma").dialog('open')
            }
        });

    });
</script>
