<script type="text/javascript">
    $(document).ready(function(){
        $('.btn_enviar').click(function(){
            
            var erros = 0;
            $('.obrigatorio').each(function(){
                if($.trim($(this).val()) == '')
                    erros++;
            });
            
            if(!$("input[name='qst1']:checked").val()) {
                erros++;
            }
            if(!$("input[name='qst2']:checked").val()) {
                erros++;
            }
            if(!$("input[name='qst3']:checked").val()) {
                erros++;
            }
            
            if(erros == 4) {
                $("#alerta").dialog("destroy");
                $("#alerta").html("Todos os dados estão em branco.<br/>Preencha pelo menos um dos campos!");
                $("#alerta").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:340,
                    height:180,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            
            } else {
                $('#formCadastro').submit();
            }
        });
        
        $('.btn_cancelar').click(function(){
            voltar();
        });
    });
</script>

