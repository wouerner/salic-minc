    function corrigirInconsistenciaExecucaoNaoVigente(item, tipo, dtInicioExecucao, dtFimExecucao)
    {
        if (tipo != '')
        {
            inconsistencia = $('#execucao_nao_vigente' + item).find('option').filter(':selected').text(); // pega a inconsistência
            $('#inconsistenciaExecucaoNaoVigente').text(inconsistencia); // ajusta o texto da inconsistência na modal
            $('#dtInicio, #dtFim').val(''); // limpa os campos com a nova data
            $('#dtInicioExecucao').val(dtInicioExecucao);
            $('#dtFimExecucao').val(dtFimExecucao);

            // carrega a modal
            $('#modalExecucaoNaoVigente').dialog
            ({
                modal: true,
                resizable: false,
                width: 700,
                height: 370,
                title: 'Corrigir Inconsistência',
                buttons:
                    {
                    Não: function()
                    {
                        $(this).dialog('close');
                        $('#execucao_nao_vigente' + item).find('option[value=""]').attr('selected',true);
                    },
                    'Sim': function()
                    {
                        $('#formExecucaoNaoVigente').submit();
                        carregandoModal();
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();
        }
    } // fecha função corrigirInconsistenciaExecucaoNaoVigente()
