            height:$(window).height() - 100,
            modal: true,
            autoOpen:true,
            draggable:false,
            title: 'Cadastrar incentivador',
            buttons: {
                'Fechar': function() {
                    $("#divDinamicaAgentes").remove();
                    $(this).dialog('close');
