                    JSVerificaIncentivador(cpfCnpj,idColunaBotaoCorrigir);
                }
            },
            close: function() {
                $("#divDinamicaAgentes").remove();
                $(this).dialog('close');
                $('html').css('overflow', 'auto');
                JSVerificaIncentivador(cpfCnpj,idColunaBotaoCorrigir);
            }
        });
    }
    
