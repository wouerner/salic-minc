        function imprimeNomeParecerista(tipo){
             var executa = true;

            $(".cinput:checked").each(function(){
                if(this.value == 2){
                    executa = false;
                    $("#msgmodal").html("Voc&ecirc; gostaria de incluir o nome do Parecerista?");
