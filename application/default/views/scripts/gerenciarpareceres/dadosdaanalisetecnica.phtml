                            'Sim': function(){
                                $(this).dialog('close');
                                if(tipo == "pdf"){
                                    pdf(true);
                                }else{
                                    xls(true);
                                }
                                return true;
                            },
                            'Nao': function(){
                                $(this).dialog('close');
                                if(tipo == "pdf"){
                                    pdf(false);
                                }else{
                                    xls(false);
                                }
                                return false;
                            }
                        }
                    });
                    $("#modalConfirm").dialog('open');
                }
            });

            if(executa == true){
                if(tipo == "pdf"){
                    pdf(true);
                }else{
                    xls(true);
                }
                return true;
            }
        }

        function pdf(imprimirNomeParecerista){
            var html = '';
            $('#relatorioAnaliseConteudo').html($('#pareceres').html());
            if(imprimirNomeParecerista == false){
                $('#relatorioAnaliseConteudo').find('.classNomeParecerista').each(function(){
                    $(this).remove();
                });
            }
            var opcao1 = $('#dadosconsolidados').html();
            var opcao2 = $('#relatorioAnaliseConteudo').html();
            var opcao3 = $('#planilha').html();
            var opcao4 = $('#diligencias').html();

            $(".cinput:checked").each(function(){
                if(this.value == 1){
                    html += opcao1;
                    html += '<br /><br />';
                } else if(this.value == 2){
                    html += opcao2;
                    html += '<br /><br />';
                } else if(this.value == 3) {
                    html += opcao3;
                    html += '<br /><br />';
                } else if(this.value == 4) {
                    html += opcao4;
                    html += '<br /><br />';
                }
            });

            if(html == ''){
                $("#msgmodal").html("Selecione um quadro para gerar o PDF!");
                $("#modalConfirm").dialog("destroy");
                $("#modalConfirm").dialog({
                    title :'Gerar PDF',
                    resizable: false,
                    width:400,
                    height:150,
                    modal: true,
                    autoOpen:false,
                    buttons: {
                        'Fechar': function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $("#modalConfirm").dialog('open');
            } else {
                $('#htmlpdf').val(html);
                $('#formpdf').submit();
             }
        }

