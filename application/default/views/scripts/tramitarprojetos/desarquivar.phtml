<script type="text/javascript">
    erro = 0;
    $(document).ready(function(){
        $('.btn_salvar').click(function(){
            var validar = true;
            $('.valida').each(function(){
                if($(this).val() == ''){
                    validar = false;
                }
            });
            if(validar == false){
                $("#error").dialog("destroy");
                $('#error').html('Dados obrigatórios n&atilde;o informados.');
                $("#error").dialog({
                    modal: true,
                    draggable: false,
                    resizable: false,
                    closeOnEscape: false,
                    buttons: {
                        'OK': function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            }

            if (erro == 2){
                $("#error").html('Pronac tem que ter no mínimo 6 caracteres!');
                $("#error").dialog('open');
                $("#error").dialog({
                    modal: true,
                    draggable: false,
                    resizable: false,
                    closeOnEscape: false,
                    buttons: {
                        'OK': function(){
                            $(this).dialog('close');
                        }
                    }
                });
                return false;
            }
            if (erro == 3){
                $("#error").html('Pronac Inexistente!');
                $("#error").dialog('open');
                $("#error").dialog({
                    modal: true,
                    draggable: false,
                    resizable: false,
                    closeOnEscape: false,
                    buttons: {
                        'OK': function(){
                            $(this).dialog('close');
                        }
                    }
                });
                return false;
            }

            if (erro == 0){
                $("#error").html('Este projeto não se encontra nesta Unidade!');
                $("#error").dialog('open');
                $("#error").dialog({
                    modal: true,
                    draggable: false,
                    resizable: false,
                    closeOnEscape: false,
                    buttons: {
                        'OK': function(){
                            $(this).dialog('close');
                        }
                    }
                });
                return false;
            } else {
                $('#form').submit();
            }
        });

        $('.numero').keydown(function(event){
            if((event.keyCode >= 96 && event.keyCode <= 105) || (event.keyCode >= 48 && event.keyCode <= 57) || event.keyCode == 8 || event.keyCode ==9 ){
                return true;
            } else {
                return false;
            }
        });
    });

    function sumiraqui(id){
        $('img[class='+id+']').toggle();
        $('tr[class='+id+']').toggle();
    }

    function buscarProjeto2(v){
        $.ajax({
            url : '<?php echo $this->url(array('controller' => 'tramitarprojetos', 'action' => 'buscaprojeto')); ?>',
            data : {
                pronac: v,
                codOrgao: <?php echo $this->codOrgao; ?>,
                msg : 'ok'
            },
            success: function(data){
                recebe = $('#orgaoERROR');
                if(data.resposta){
                    for ( i in data.conteudo){
                        recebe.html(data.conteudo.NomeProjeto+' - '+data.conteudo.Processo+' - '+data.conteudo.Sigla+' - '+data.conteudo.Orgao);
                        recebe.css("color", "black");
                        erro = 1;
                    }
                } else {
                    recebe.html('Este projeto n&atilde;o se encontra nessa unidade');
                    recebe.css("color", "red");
                    erro = 0;
                }
            },
            type : 'post'
            ,dataType : 'json'
        });
    }

    function buscarProjeto(v){
        $.ajax({
            url : '<?php echo $this->url(array('controller' => 'tramitarprojetos', 'action' => 'buscaprojetodespachar')); ?>',
            data : {
                pronac: v,
                msg : 'ok'
            },
            success: function(data){
                recebe = $('#orgaoERROR');
                if(data.resposta){
                    for ( i in data.conteudo){
                        buscarProjeto2(v);
                    }
                } else {
                    if($("#pronac").val().length < 6){
                        $("#error").html('Pronac tem que ter no mínimo 6 caracteres!');
                        $("#error").dialog('open');
                        $("#error").dialog({
                            modal: true,
                            draggable: false,
                            resizable: false,
                            closeOnEscape: false,
                            buttons: {
                                'OK': function(){
                                    $(this).dialog('close');
                                }
                            }
                        });
                        $(".ui-dialog-titlebar-close").remove();
                        erro = 2;
                    } else {
                        recebe.html('Pronac Inexistente.');
                        recebe.css("color", "red");
                        erro = 3;
                    }
                }
            },
            type : 'post'
            ,dataType : 'json'
        });
    }
</script>

